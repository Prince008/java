public class MyClass {
    public static void main(String args[]) {
      	int row =5;
		int i = 0,j=0;
		for (i=1; i<=row; i++)
        {
            for ( j=row; j>i; j--){
                System.out.print(" ");
            }
            for(int k=1;k<=i;k++)
            {
                    System.out.print("*");   
            }
            System.out.println();
		            
		        }
}
} 



